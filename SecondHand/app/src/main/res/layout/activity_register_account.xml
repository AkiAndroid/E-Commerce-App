<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg2"
    tools:context=".RegisterAccount">

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

   <ImageView
       android:id="@+id/registerapplogo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="70dp"
       android:layout_marginTop="11dp"
       android:src="@drawable/second_hand_image" />

   <EditText
       android:id="@+id/Nameinput"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/registerapplogo"
       android:layout_centerHorizontal="true"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="55dp"
       android:layout_marginRight="20dp"
       android:background="@drawable/input_design"
       android:hint="Full Name"
       android:textColorHint="@color/colorPrimary"
       android:padding="20dp"
       android:textColor="@color/colorPrimary"
       android:textSize="18dp"
       android:textStyle="italic" />

   <EditText
       android:id="@+id/Rollnoinput"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/Nameinput"
       android:layout_centerHorizontal="true"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="55dp"
       android:layout_marginRight="20dp"
       android:background="@drawable/input_design"
       android:hint="Roll no"
       android:textColorHint="@color/colorPrimary"
       android:padding="20dp"
       android:textColor="@color/colorPrimary"
       android:textSize="18dp"
       android:textStyle="italic" />

   <EditText
       android:id="@+id/signinwebmailinput"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/Rollnoinput"
       android:layout_centerHorizontal="true"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="55dp"
       android:layout_marginRight="20dp"
       android:background="@drawable/input_design"
       android:hint="Web Mail"
       android:textColorHint="@color/colorPrimary"
       android:padding="20dp"
       android:textColor="@color/colorPrimary"
       android:textSize="18dp"
       android:textStyle="italic" />

   <EditText
       android:id="@+id/signinpasswordinput"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/signinwebmailinput"
       android:layout_centerHorizontal="true"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="55dp"
       android:layout_marginRight="20dp"
       android:background="@drawable/input_design"
       android:hint="Password"
       android:textColorHint="@color/colorPrimary"
       android:inputType="textPassword"
       android:padding="20dp"
       android:textColor="@color/colorPrimary"
       android:textSize="18dp"
       android:textStyle="italic" />

   <EditText
       android:id="@+id/signinrepasswordinput"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/signinpasswordinput"
       android:layout_centerHorizontal="true"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="55dp"
       android:layout_marginRight="20dp"
       android:background="@drawable/input_design"
       android:hint="Password"
       android:textColorHint="@color/colorPrimary"
       android:inputType="textPassword"
       android:padding="20dp"
       android:textColor="@color/colorPrimary"
       android:textSize="18dp"
       android:textStyle="italic" />

   <EditText
       android:id="@+id/signinphonenumber"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/signinrepasswordinput"
       android:layout_centerHorizontal="true"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="55dp"
       android:textColorHint="@color/colorPrimary"
       android:layout_marginRight="20dp"
       android:background="@drawable/input_design"
       android:hint="Phone Number"
       android:padding="20dp"
       android:textColor="@color/colorPrimary"
       android:textSize="18dp"
       android:textStyle="italic" />


   <Button
       android:id="@+id/Signupbutton"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/signinphonenumber"
       android:layout_marginLeft="15dp"
       android:layout_marginTop="25dp"
       android:layout_marginRight="15dp"
       android:layout_marginBottom="10dp"
       android:background="@drawable/buttons"
       android:fontFamily="sans-serif-medium"
       android:padding="20dp"
       android:text="Sign up"
       android:textAllCaps="false"
       android:textSize="20sp" />

  </LinearLayout>
 </ScrollView>
</RelativeLayout>