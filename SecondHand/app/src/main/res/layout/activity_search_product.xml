<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg2"
    tools:context=".SearchProductActivity">

    <RelativeLayout
        android:id="@+id/search_bar_products"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/design_default_color_on_secondary">

        <EditText
            android:id="@+id/search_bar_edittext"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:hint="Search Products"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="20dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/search_bar_edittext"
            android:background="@drawable/buttons"
            android:text="Search" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_bar_LISt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_bar_products" />


</RelativeLayout>